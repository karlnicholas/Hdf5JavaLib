{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: Debug Active File",
            "type": "shell",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-IC:/msys64/mingw64/include",
                "-IC:/msys64/mingw64/include/hdf5",
                "-LC:/msys64/mingw64/lib",
                "-lhdf5_cpp",
                "-lhdf5",
                "-lz"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Builds currently open file with HDF5 support (Debug)"
        },
        {
            "label": "Build: Release Active File",
            "type": "shell",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-IC:/msys64/mingw64/include",
                "-IC:/msys64/mingw64/include/hdf5",
                "-LC:/msys64/mingw64/lib",
                "-lhdf5_cpp",
                "-lhdf5",
                "-lz"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Builds currently open file with HDF5 support (Release)"
        },
        {
            "label": "Run: Release Active File (No Debugger)",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "detail": "Runs the compiled release executable from the active file without debugger",
            "dependsOn": [
                "Build: Release Active File"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/msys64/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}